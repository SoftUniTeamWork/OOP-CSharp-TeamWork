<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	mc:Ignorable="d"
	x:Class="The_Powerful_Game.Menu.FightField"
	d:DesignWidth="800" d:DesignHeight="600">

    <UserControl.Resources>
        <Style TargetType="TextBlock"
               x:Key="NameStyle">
            <Setter Property="Width"
                    Value="135"></Setter>
            <Setter Property="Height"
                    Value="29"></Setter>
            <Setter Property="TextWrapping"
                    Value="Wrap"></Setter>
            <Setter Property="FontSize"
                    Value="20"></Setter>
            <Setter Property="VerticalAlignment"
                    Value="Top"></Setter>
            <Setter Property="TextAlignment"
                    Value="Center"></Setter>
        </Style>
        <Style x:Key="Health"
                TargetType="Rectangle">
            <Setter Property="Width"
                    Value="296"></Setter>
            <Setter Property="Height"
                    Value="26"></Setter>
            <Setter Property="Stroke"
                    Value="#00ff00"></Setter>
            <Setter Property="Fill"
                    Value="#00ff00"></Setter>
            <Setter Property="VerticalAlignment"
                    Value="Top"></Setter>
        </Style>
        <Style x:Key="Character"
               TargetType="Image">
            <Setter Property="Height"
                    Value="285"></Setter>
            <Setter Property="Width"
                    Value="194"></Setter>
            <Setter Property="VerticalAlignment"
                    Value="Center"></Setter>
        </Style>
        <Style x:Key="ButtonMenuStyle"
               TargetType="Button">
            <Setter Property="Width"
                    Value="128"></Setter>
            <Setter Property="Height"
                    Value="23"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="fight" Background="White">
        <TextBlock Style="{StaticResource NameStyle}"
                   HorizontalAlignment="Left"
                   Text="The Ork Slayer"
                   Margin="84,10,0,0" 
                   Width="220"/>
        <TextBlock Style="{StaticResource NameStyle}"
                   HorizontalAlignment="Right" 
                   Margin="0,10,83,0"
                   Text="Orc Revenger"
                   Width="220"/>
        <Rectangle Style="{StaticResource Health}"
                   HorizontalAlignment="Left"
                   Margin="42,44,0,0"/>
        <Rectangle Style="{StaticResource Health}"
                   HorizontalAlignment="Right"
                   Margin="0,44,41,0"/>
        <Image Style="{StaticResource Character}"
               Source="../Resources/WoodElf.png"
               Margin="95,106,511,209"/>
        <Image Style="{StaticResource Character}"
               Source="../Resources/3D-Orc.png"
               HorizontalAlignment="Center"
               Margin="523,106,83,209"
               Width="194"/>
        <TextBlock Background="DarkMagenta"
            HorizontalAlignment="Left"
            Margin="42,421,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Height="6"
            Width="717"/>
        <Canvas HorizontalAlignment="Left" Height="158" Margin="42,432,0,0" VerticalAlignment="Top" Width="717">
            <Menu Height="138" Canvas.Left="10" Canvas.Top="10" Width="146">
                <Button Style="{StaticResource ButtonMenuStyle}"
                        Content="Attack"
                        Click="ButtonAttackOnClick"/>
                <Button Style="{StaticResource ButtonMenuStyle}"
                        Content="Spell"
                        Click="ButtonSpellOnClick"/>
                <Button Style="{StaticResource ButtonMenuStyle}"
                        Content="Potion"
                        Click="ButtonDrinkPotionOnClick"/>
                <Button Style="{StaticResource ButtonMenuStyle}"
                        Content="Fled"
                        Click="ButtonFledOnClick"/>
            </Menu>
            <TextBox Height="138"
                     Name="CombatLog"
                     Canvas.Left="171"
                     TextWrapping="Wrap"
                     Text="Combat CLog"
                     FontSize="12"
                     IsReadOnly = "True"
                     Canvas.Top="10"
                     Width="536"
                     VerticalScrollBarVisibility="Auto"/>
        </Canvas>

    </Grid>
</UserControl>