<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	mc:Ignorable="d"
	x:Class="The_Powerful_Game.Menu.MainMenu"
	d:DesignWidth="800" d:DesignHeight="600">
    
    
    <Grid x:Name="mainMenuLayoutRoot" Background="White">
        <Button x:Name="newGameButton" HorizontalAlignment="Center" Margin="120,0,0,218" VerticalAlignment="Bottom" Width="200" Content="New Game" Height="40" FontSize="21.333" Click="newGameButton_Click"/>
        <Button x:Name="optionButton" Height="40" HorizontalAlignment="Center" Margin="120,0,0,170" VerticalAlignment="Bottom" Width="200" FontSize="21.333" Content="Option" Click="optionButton_Click"/>
        <Button x:Name="creditsGameButton" Height="40" HorizontalAlignment="Center" Margin="120,0,0,122" VerticalAlignment="Bottom" Width="200" FontSize="21.333" Content="Credits" Click="creditsButton_Click"/>
        <Button x:Name="quitButton" Height="40" HorizontalAlignment="Center" Margin="120,0,0,74" VerticalAlignment="Bottom" Width="200" FontSize="21.333" Content="Quit" Click="quitButton_Click"/>
    </Grid>
</UserControl>