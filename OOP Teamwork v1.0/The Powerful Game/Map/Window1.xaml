<Window x:Class="The_Powerful_Game.Map.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:map="clr-namespace:The_Powerful_Game.Map"
        Title="Window1" Height="300" Width="300">
    <ItemsControl ItemsSource="{Binding Tiles}">
        <ItemsControl.Resources>
            <DataTemplate DataType="{x:Type map:Tile}">
                <Grid Background="{Binding Background}">
                    <TextBlock Text="{Binding Data}"></TextBlock>
                </Grid>
            </DataTemplate>
        </ItemsControl.Resources>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Rows="{Binding Rows}" Columns="{Binding Columns}"></UniformGrid>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</Window>
